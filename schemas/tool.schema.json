{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "website", "category", "tags", "summary", "why", "pricing", "getting_started", "added_by"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the tool (lowercase, numbers, hyphens only)"
    },
    "name": {
      "type": "string",
      "description": "Display name of the tool"
    },
    "website": {
      "type": "string",
      "format": "uri",
      "description": "Official website URL"
    },
    "category": {
      "type": "string",
      "enum": ["AI", "Backend", "Build", "CLI", "Cloud", "Collab", "Data", "DevEx", "Frontend", "Infra", "Mobile", "Observability", "Performance", "Security", "Testing", "UX"],
      "description": "Primary category from categories.json"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Array of relevant tags"
    },
    "summary": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of what the tool does"
    },
    "why": {
      "type": "string",
      "description": "Why this tool is useful or what problem it solves"
    },
    "pricing": {
      "type": "string",
      "enum": ["Free", "Freemium", "Paid", "Open Source"],
      "description": "Pricing model"
    },
    "getting_started": {
      "type": "string",
      "description": "Quick start instructions or first steps"
    },
    "added_by": {
      "type": "object",
      "required": ["name", "date"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name or username of contributor"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date added (YYYY-MM-DD)"
        }
      }
    },
    "github": {
      "type": "string",
      "format": "uri",
      "description": "GitHub repository URL (optional)"
    },
    "docs": {
      "type": "string",
      "format": "uri",
      "description": "Documentation URL (optional)"
    }
  }
}