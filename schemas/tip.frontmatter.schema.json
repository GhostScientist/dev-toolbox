{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "category", "tags", "added_by"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the tip (lowercase, numbers, hyphens only)"
    },
    "title": {
      "type": "string",
      "description": "Display title of the tip"
    },
    "category": {
      "type": "string",
      "enum": ["AI", "Backend", "Build", "CLI", "Cloud", "Collab", "Data", "DevEx", "Frontend", "Infra", "Mobile", "Observability", "Performance", "Security", "Testing", "UX"],
      "description": "Primary category from categories.json"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Array of relevant tags"
    },
    "added_by": {
      "type": "object",
      "required": ["name", "date"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name or username of contributor"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date added (YYYY-MM-DD)"
        }
      }
    },
    "summary": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief summary of the tip (optional)"
    }
  }
}